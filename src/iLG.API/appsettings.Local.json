{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "ConnectionStrings": {
        "Database": "${ConnectionStrings__Database}",
        "Redis": "${ConnectionStrings__Redis}"
    },

    "MongoDb": {
        "Connection": "${MongoDb__Connection}",
        "LoggingDatabase": "${MongoDb__LoggingDatabase}",
        "LoggingCollection": "${MongoDb__LoggingCollection}"
    },

    "AppSettings": {
        "JwtSettings": {
            "Secret": "${AppSettings__JwtSettings__Secret}",
            "Issuer": "${AppSettings__JwtSettings__Issuer}",
            "Audience": "${AppSettings__JwtSettings__Audience}"
        },
        "MailSettings": {
            "EnableSsl": "${AppSettings__MailSettings__EnableSsl}",
            "MailServerUsername": "${AppSettings__MailSettings__MailServerUsername}",
            "MailServerPassword": "${AppSettings__MailSettings__MailServerPassword}",
            "MailServer": "${AppSettings__MailSettings__MailServer}",
            "MailServerPort": "${AppSettings__MailSettings__MailServerPort}"
        }
    }
}